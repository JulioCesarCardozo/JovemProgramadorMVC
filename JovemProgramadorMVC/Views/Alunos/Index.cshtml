@model List<AlunoModel>

<div class="text-left">
    <div>
        <h1>Dados dos Alunos</h1>
    </div>
</div>

<table class="table">
    <thead>
        <tr>

            <th scope="col">Nome</th>
            <th scope="col">Idade</th>
            <th scope="col">Contato</th>
            <th scope="col">E-mail</th>
            <th scope="col">CEP</th>
        </tr>
    </thead>
    <tbody>

        @if (Model != null && Model.Any())
        {
            foreach (AlunoModel aluno in Model)
            {
                <tr>

                    <td>@aluno.Nome</td>
                    <td>@aluno.Idade anos</td>
                    <td>@aluno.Contato</td>
                    <td>@aluno.Email</td>
                    <td>@aluno.CEP</td>
                    <td>
                        <div class="d-grid gap-2 d-md-block">
                                <a class="btn btn-primary" type="button" asp-controller="Alunos" asp-action="BuscarEndereco" asp-route-cep="@aluno.CEP">Endereço</a>
                                <a class="btn btn-primary" type="button" asp-controller="Alunos" asp-action="Editar" asp-route-id="@aluno.Id">Editar</a>
                                <a class="btn btn-primary" type="button" asp-controller="Alunos" asp-action="ExcluirAluno" asp-route-id="@aluno.Id">Excluir</a>
</div>
                    </td>
                </tr>

            }

        }

    </tbody>
</table>
<div class="d-grid gap-2 d-md-flex justify-content-md-center">
    <a class="btn btn-primary" type="button" asp-controller="Alunos" asp-action="Adicionar">Adicionar Novo Aluno</a>
</div>